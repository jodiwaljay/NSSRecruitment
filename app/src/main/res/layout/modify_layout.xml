<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editRollno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxLength="12"
            android:maxLines="1"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="15dp"
            android:hint="@string/bits_id"
            android:inputType="number"
            android:minWidth="150dp" />



        <EditText
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="@string/name"
            android:maxLength="50"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:maxLines="1"
            android:minWidth="150dp"
            android:inputType="textCapWords" />


        <EditText
            android:id="@+id/editMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="@string/phone_no."
            android:minWidth="150dp"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="10" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">



            <Spinner
                android:id="@+id/hostel_spinner"
                android:layout_width="wrap_content"
                android:spinnerMode="dropdown"
                android:background="#00000000"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />

            <EditText
                android:id="@+id/editRoomNo"
                android:layout_width="wrap_content"
                android:maxLength="4"
                android:hint="Enter Room Number"
                android:textColorHint="#000000"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"

                android:inputType="number" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/one_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dialog"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:popupBackground="#C8F7C5"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/two_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dialog"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="5dp" />

        <Spinner
            android:id="@+id/three_preference"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="15dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_modify"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/ectasy"
                android:minWidth="100dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/discard_modify"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@color/colorAccent"
                android:minWidth="100dp"
                android:text="Discard"
                android:textAllCaps="false"

                android:textColor="#ffffff"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

